@model Tuple<STech.DTO.HoaDonDTO, List<STech.DTO.ChiTietHDDTO>, STech.DTO.TichDiemDTO, STech.DTO.KhachHangDTO>
@{
    ViewBag.Title = "Chi tiết đơn hàng - " + Model.Item1.MaHD;
}

<section class="breadcrumb">
    <ul class="breadcrumb-list d-flex">
        @foreach (var item in ViewBag.Breadcrumb)
        {
            <li class="breadcrumb-item">
                @if (item.BreadcrumbLink == "")
                {
                    <span>@item.BreadcrumbName</span>
                }
                else
                {
                    <a href="@item.BreadcrumbLink">
                        @item.BreadcrumbName
                    </a>
                }
            </li>
        }
    </ul>
</section>

<section class="order-action d-flex gap-3 mb-2">
    @if (Model.Item1.TrangThai != "cancelled")
    {
        <button class="print-order" data-order="@Model.Item1.MaHD">
            <i class="fa-solid fa-print me-1"></i>
            <span>In hóa đơn</span>
        </button>
    }

    @if (Model.Item1.TrangThai == "unconfirmed")
    {
        <button class="cancel-order" data-order="@Model.Item1.MaHD">
            <i class="fa-solid fa-file-circle-xmark me-1"></i>
            <span>Hủy đơn hàng</span>
        </button>
    }
</section>

<section class="order-detail">
    <div class="order-info-wrapper d-flex gap-3">
        <div class="order-info">
            <div class="detail-header">
                <h5>Thông tin đơn hàng - @Model.Item1.MaHD</h5>
            </div>
            <hr />
            @{ 
                string paymentStatusClass = "order-waiting";
                string paymentText = "Chưa thanh toán";
                if (Model.Item1.TrangThaiThanhToan.Equals("failed"))
                {
                    paymentStatusClass = "order-failed";
                    paymentText = "T.toán thất bại";
                }
                else if (Model.Item1.TrangThaiThanhToan.Equals("paid"))
                {
                    paymentStatusClass = "order-success";
                    paymentText = "Đã thanh toán";
                }

                string statusClass = "order-waiting";
                string statusText = "Chờ xác nhận";
                if (Model.Item1.TrangThai.Equals("cancelled"))
                {
                    statusClass = "order-failed";
                    statusText = "Đã hủy";
                }
                else if (Model.Item1.TrangThai.Equals("confirmed"))
                {
                    statusClass = "order-success";
                    statusText = "Đã xác nhận";
                }
            }
        <div class="order-info-box">
            <div class="order-info-item d-flex gap-2">
                <span>Mã đơn hàng: </span>
                <p>@Model.Item1.MaHD</p>
            </div>
            <div class="order-info-item d-flex gap-2">
                <span>Ngày đặt hàng: </span>
                <p>@Model.Item1.NgayDat.Value.ToString("dd/MM/yyyy HH:mm tt")</p>
            </div>
            <div class="order-info-item d-flex gap-2">
                <span>Địa chỉ nhận hàng: </span>
                <p>@(Model.Item1.DiaChiGiao != "Store" ? Model.Item1.DiaChiGiao : "Nhận tại cửa hàng" )</p>
            </div>
            <div class="order-info-item d-flex gap-2">
                <span>Cách thức thanh toán: </span>
                <p>@Model.Item1.PhuongThucThanhToan</p>
            </div>
            <div class="order-info-item d-flex gap-2">
                <span>Trạng thái thanh toán: </span>
                <p class="@paymentStatusClass">@paymentText</p>
            </div>
            <div class="order-info-item d-flex gap-2">
                <span>Trạng thái: </span>
                <p class="@statusClass">@statusText</p>
            </div>
            <div class="order-info-item d-flex gap-2">
                <span>Ghi chú: </span>
                <p>@(Model.Item1.GhiChu != null && Model.Item1.GhiChu.Length > 0 ? Model.Item1.GhiChu : "Không")</p>
            </div>
            <div class="order-info-item d-flex gap-2">
                <span>Tổng tiền: </span>
                <p class="order-product-price">@Model.Item1.TongTien.Value.ToString("##,###", ViewBag.cul)đ</p>
            </div>
            @if (Model.Item3 != null)
            {
                <div class="mt-2">
                    <hr />
                    <div class="order-info-item d-flex gap-2">
                        <span>Số điểm cộng thêm: </span>
                        <p class="order-product-price">@Model.Item3.SoDiem.ToString("##,###", ViewBag.cul)</p>
                    </div>
                    <div class="order-info-item d-flex gap-2">
                        <span>Trạng thái điểm: </span>
                        <p class="@(Model.Item3.TrangThai.Equals("confirmed") ? "order-success" : "order-waiting")">@(Model.Item3.TrangThai.Equals("confirmed") ? "Đã cộng điểm" : "Chờ xác nhận")</p>
                    </div>
                </div>
            }
        </div>
        </div>
        <div class="order-info">
            <div class="detail-header">
                <h5>Thông tin khác hàng</h5>
            </div>
            <hr />
            <div class="order-info-box">
                <div class="order-info-item d-flex gap-2">
                    <span>Mã khách hàng: </span>
                    <p>@Model.Item4.MaKH</p>
                </div>
                <div class="order-info-item d-flex gap-2">
                    <span>Họ tên: </span>
                    <p>@Model.Item4.HoTen</p>
                </div>
                <div class="order-info-item d-flex gap-2">
                    <span>Số điện thoại: </span>
                    <p>@Model.Item4.SDT</p>
                </div>
                <div class="order-info-item d-flex gap-2">
                    <span>Email: </span>
                    <p>@Model.Item4.Email</p>
                </div>
                <div class="order-info-item d-flex gap-2">
                    <span>Địa chỉ: </span>
                    <p>@Model.Item4.DiaChi</p>
                </div>
            </div>
        </div>
    </div>
    <div class="order-detail-wrapper">
        <div class="order-detail-box">
            <div class="detail-header">
                <h5>Chi tiết đơn hàng</h5>
            </div>
            <hr />
            <table class="table">
                <tr>
                    <th>Mã sản phẩm</th>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>SL</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
                @foreach(var item in Model.Item2)
                {
                    <tr>
                        <td><a class="text-decoration-none text-black" href="@item.SanPham.MaSP">@item.SanPham.MaSP</a></td>
                        <td>
                            <img class="order-product-img" src="@(item.SanPham.HinhAnh != null ? item.SanPham.HinhAnh : "/Assets/Images/no-image.jpg")" alt="" />
                        </td>
                        <td>
                            <div class="order-product-name">
                                <a href="/product/@item.SanPham.MaSP">@item.SanPham.TenSP</a>
                            </div>
                        </td>
                        <td>@item.SoLuong</td>
                        <td>
                            <div class="order-product-price">@item.ThanhTien.ToString("##,###", ViewBag.cul)đ</div>
                        </td>
                        <td>
                            <div class="order-product-price">
                                @(Convert.ToDecimal(item.ThanhTien * item.SoLuong).ToString("##,###", ViewBag.cul))đ
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</section>